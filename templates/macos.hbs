<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>snap.nvim</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      background-color: transparent;
    }

    body {
      padding: 10px 20px;
      width: calc({{minWidth}}px + 30px);
    }

    .dot {
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }

    .close { background-color: #ff5f56; }
    .minimize { background-color: #ffbd2e; }
    .maximize { background-color: #27c93f; }

    .title-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 48px;
      background-color: #1e2030;
      border: 1px solid #2f334d;
      border-radius: 8px 8px 0 0;
      padding: 0 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
    }

    .title-text-container {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .title-text {
      color: #5ad6ff;
      font-size: 20px;
      font-weight: 600;
      letter-spacing: 0.5px;
      font-family: '{{fontSettings.fonts.default.name}}', monospace;
      filter: drop-shadow(0 0 4px rgba(90, 214, 255, 0.4)) drop-shadow(0 0 8px rgba(90, 214, 255, 0.25)) drop-shadow(0 0 12px rgba(164, 231, 255, 0.15));
    }

    .title-logo {
      width: 48px;
      height: 64px;
      flex-shrink: 0;
      display: inline-block;
    }

    .title-logo svg {
      width: 100%;
      height: 100%;
      display: block;
    }

    .window-controls {
      display: flex;
      gap: 8px;
      align-items: center;
    }

    pre#snap {
      margin: 0;
      background-color: {{theme.bgColor}};
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
      color: {{theme.fgColor}};
      display: block;
      font-family: '{{fontSettings.fonts.default.name}}', monospace;
      font-size: {{fontSettings.size}}pt;
      padding: 15px;
      white-space: pre; /* Preserve whitespace formatting */
      word-break: keep-all; /* Prevent breaking words */
      letter-spacing: 0; /* Ensure equal character width */
      font-variant-numeric: tabular-nums; /* Equal width for numbers */
      font-feature-settings: "tnum"; /* Tabular numbers */
      tab-size: {{tabstop}}; /* Tab width in spaces */
    }

    pre#snap .code-line {
      margin: 0;
      padding: 0;
      line-height: {{fontSettings.line_height}}pt;
      display: block;
      margin-bottom: -{{fontSettings.line_height}}px;
    }

    pre#snap .code-line i {
      font-family: '{{fontSettings.fonts.italic.name}}', monospace;
      letter-spacing: 0;
      font-variant-numeric: tabular-nums;
      font-feature-settings: "tnum";
    }

    pre#snap .code-line b {
      font-family: '{{fontSettings.fonts.bold.name}}', monospace;
      letter-spacing: 0;
      font-variant-numeric: tabular-nums;
      font-feature-settings: "tnum";
    }

    pre#snap .code-line i b {
      font-family: '{{fontSettings.fonts.bold_italic.name}}', monospace;
      letter-spacing: 0;
      font-variant-numeric: tabular-nums;
      font-feature-settings: "tnum";
    }
  </style>
</head>
<body>
  <div id="container">
    <div class="title-bar">
      <div class="window-controls">
        <div class="dot close"></div>
        <div class="dot minimize"></div>
        <div class="dot maximize"></div>
      </div>
      <span class="title-text-container">
        <span class="title-logo">{{{logo}}}</span>
        <span class="title-text">
          snap.nvim
        </span>
      </span>
    </div>
    <pre id="snap">{{{code}}}</pre>
  </div>
</body>
</html>
